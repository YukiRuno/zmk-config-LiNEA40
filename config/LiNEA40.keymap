&trans    &kp LC(LG(LEFT_ARROW))  &kp UP_ARROW  &kp LC(LG(RIGHT_ARROW))  &trans                    &kp KP_MULTIPLY  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp KP_PLUS
&trans    &kp LEFT_ARROW          &kp DOWN      &kp RIGHT_ARROW          &trans                    &kp KP_SLASH     &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &kp KP_MINUS
&kp HOME  &kp PAGE_DOWN           &kp END       &kp PAGE_UP              &trans                    &kp UNDER        &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp ENTER
&trans    &trans                  &trans        &trans                   &trans  &trans    &trans  &kp NUMBER_0                   &kp NUMBER_0  &kp DOT       &kp QUESTION
            >;

            sensor-bindings = <&inc_dec_kp DOWN_ARROW UP_ARROW>;
        };

        WIRELESS {
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                         &bt BT_SEL 0    &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4
&trans        &trans        &trans        &trans        &trans                               &trans          &trans        &trans        &trans        &trans
&trans        &trans        &trans        &trans        &trans                               &trans          &trans        &trans        &trans        &bt BT_CLR
&trans        &trans        &trans        &trans        &trans        &trans    &bootloader  &studio_unlock                &trans        &trans        &bt BT_CLR_ALL
            >;

            sensor-bindings = <&inc_dec_kp RIGHT_ARROW LEFT_ARROW>;
        };

        SymNumC {
            bindings = <
&kp NUMBER_1   &kp NUMBER_2  &kp NUMBER_3   &kp NUMBER_4    &kp NUMBER_5                                   &kp NUMBER_6  &kp NUMBER_7   &kp NUMBER_8  &kp NUMBER_9   &kp NUMBER_0
&kp LBKT       &kp RBKT      &kp LESS_THAN  &kp UNDERSCORE  &kp PIPE                                       &kp PLUS      &kp MINUS      &kp ASTERISK  &kp SLASH      &trans
&kp BACKSLASH  &kp TILDE     &kp GRAVE      &kp EQUAL       &kp LCTRL                                      &kp AT_SIGN   &kp SEMICOLON  &kp COLON     &kp LESS_THAN  &kp GREATER_THAN
&trans         &trans        &trans         &trans          &trans        &trans    &mt LEFT_SHIFT DELETE  &trans                       &trans        &trans         &trans
            >;
        };

        SymNum {
            bindings = <
&kp SEMICOLON      &kp COLON         &kp LS(GRAVE)     &kp LS(NUMBER_1)  &kp LS(SLASH)                            &kp SLASH     &kp NUMBER_7  &kp NUMBER_8   &kp NUMBER_9      &kp EQUAL
&kp BACKSLASH      &kp LS(NUMBER_7)  &kp LS(NUMBER_3)  &kp LEFT_BRACKET  &kp RIGHT_BRACKET                        &kp ASTERISK  &kp NUMBER_4  &kp NUMBER_5   &kp NUMBER_6      &kp MINUS
&kp LS(NUMBER_4)   &kp LS(NUMBER_2)  &kp LS(NUMBER_5)  &kp LS(NUMBER_9)  &kp LS(NUMBER_0)                         &kp NUMBER_0  &kp NUMBER_1  &kp NUMBER_2   &kp NUMBER_3      &kp PLUS
&kp DOUBLE_QUOTES  &kp GRAVE         &trans            &trans            &trans             &trans    &kp DELETE  &trans                      &kp LESS_THAN  &kp GREATER_THAN  &trans
            >;

            sensor-bindings = <&mouse_scrl SCRL_DOWN SCRL_UP>;
        };

        Func {
            bindings = <
&kp HOME        &kp TAB         &trans          &kp LS(TAB)      &trans                                 &trans         &trans    &trans    &trans     &kp F10
&kp LEFT_SHIFT  &kp LC(A)       &msc SCRL_UP    &kp LC(E)        &trans                                 &kp PAGE_UP    &mkp MB1  &kp UP    &mkp MB2   &trans
&kp END         &msc SCRL_LEFT  &msc SCRL_DOWN  &msc SCRL_RIGHT  &trans                                 &kp PAGE_DOWN  &kp LEFT  &kp DOWN  &kp RIGHT  &trans
&trans          &trans          &trans          &trans           &kp LCTRL  &kp LEFT_COMMAND    &trans  &trans                   &trans    &trans     &to 10
            >;

            sensor-bindings = <&mouse_scrl SCRL_DOWN SCRL_UP>;
        };

        Adjust {
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                    &trans  &trans  &trans  &trans  &bt BT_CLR_ALL
&bt_mac       &bt_win       &bt_pad       &trans        &bt_macmini                     &trans  &trans  &trans  &trans  &trans
&trans        &trans        &trans        &trans        &trans                          &trans  &trans  &trans  &trans  &trans
&trans        &trans        &trans        &trans        &trans        &trans    &trans  &trans          &trans  &trans  &trans
